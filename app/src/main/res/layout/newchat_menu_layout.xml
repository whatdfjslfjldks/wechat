<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/layout_iv"
        android:layout_marginLeft="10dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/iv_chats"/>
    <TextView
        android:id="@+id/layout_tx"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="New Chat"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_height="1dp"
        android:background="@color/white"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/layout_iv_add"
        android:layout_marginLeft="10dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/iv_contacts"/>
    <TextView
        android:id="@+id/layout_tx_add"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Add Contacts"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_height="1dp"
        android:background="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/layout_iv_scan"
            android:layout_marginLeft="10dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/scan"/>
        <TextView
            android:id="@+id/layout_tx_scan"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Scan"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_height="1dp"
        android:background="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/layout_iv_money"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/money" />

        <TextView
            android:id="@+id/layout_tx_money"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Money"/>
    </LinearLayout>

</LinearLayout>